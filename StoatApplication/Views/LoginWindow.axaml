<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="450"
        x:Class="StoatApplication.Views.LoginWindow"
        Title="Login">
    <StackPanel Spacing="5" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Spacing="5" Orientation="Vertical" Width="300">
            <TextBox Name="TextBoxEmail" Watermark="Email" />
            <TextBox Name="TextBoxPassword" Watermark="Password" PasswordChar="*" />
            <Button HorizontalAlignment="Center" Name="LoginButton" Click="HandleLogin">Login</Button>
        </StackPanel>
        <Border Name="ErrorBorder" IsVisible="False" CornerRadius="5" HorizontalAlignment="Center" Width="300"
                Background="DarkRed">
            <Label Margin="10" Foreground="White" Name="ErrorMessage" />
        </Border>

    </StackPanel>

</Window>